<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">


    <android.support.v7.widget.CardView
        android:id="@+id/product_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"

        >

        <RelativeLayout
            android:id="@+id/cont_product_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <TextView
                android:id="@+id/cont_productname_lbl"
                style="@android:style/TextAppearance.Material.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="24dp"
                android:text="Ham"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/cont_quantity_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/cont_productname_lbl"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/cont_expiration_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/cont_quantity_lbl"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:text="TextView" />

            <View
                android:id="@+id/card_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/cont_expiration_lbl"
                android:layout_marginTop="16dp"
                android:background="#eee" />

            <Button
                android:id="@+id/cont_show_btn"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/card_line"
                android:background="@android:color/transparent"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="SHOW"
                android:textColor="@color/colorAccent" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>